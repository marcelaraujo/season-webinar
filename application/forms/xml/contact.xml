<?xml version="1.0" encoding="UTF-8"?>
<form>
	<name>contact</name>
	<method>post</method>
	<!--
	<action>/site/index/index</action>
	-->
	<enctype>application/x-www-form-urlencoded</enctype>
	<class>form-horizontal well</class>
	<displayGroups>
		<group>
			<options>
				<legend>Credential</legend>
			</options>
			<elements>
				<element_1>username</element_1>
				<element_2>first_name</element_2>
				<element_3>password</element_3>
				<element_4>yourchoise</element_4>
				<element_5>cities</element_5>
				<element_6>countries</element_6>
				<element_7>newspaper</element_7>
				<element_8>mycaptcha</element_8>
				<element_9>submit</element_9>
			</elements>
		</group>
	</displayGroups>
