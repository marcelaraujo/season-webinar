	<elements>
		<username>
			<type>text</type>
			<options>
				<order>0</order>
				<class>input-large</class>
				<label>username</label>
				<placeholder>username</placeholder>
				<description>Test of description</description>
				<required>false</required>
				<allowEmpty>true</allowEmpty>
				<value />
				<validators>
					<strlen>
						<validator>StringLength</validator>
						<options>
							<min>4</min>
							<max>50</max>
						</options>
					</strlen>
				</validators>
				<required>true</required>
				<filters>
					<!--
					<StringTrim>
						<filter>StringTrim</filter>
					</StringTrim>
					 -->
					<StringToLower>
						<filter>StringToLower</filter>
					</StringToLower>
				</filters>
				<decorators>
					<viewHelper>ViewHelper</viewHelper>
					<htmlTagDiv>
						<id>HtmlTag</id>
						<options>
							<tag>div</tag>
							<class>test</class>
						</options>
					</htmlTagDiv>
					<!--  -->
					<asdasd>
						<id>HtmlTag</id>
						<options>
							<tag>div</tag>
							<class>test</class>
						</options>
					</asdasd>
					<formInputAppend>
						<type>
							<wrapperDiv>HtmlTag</wrapperDiv>
						</type>
						<option>
							<tag>div</tag>
							<class>input-append</class>
						</option>
					</formInputAppend>
				</decorators>
			</options>
		</username>
		<first_name>
			<type>text</type>
			<options>
				<order>1</order>
				<class>input-large</class>
				<label>first_name</label>
				<placeholder>first_name</placeholder>
			</options>
		</first_name>
		<password>
			<type>password</type>
			<options>
				<order>3</order>
				<class>input-large</class>
				<label>password</label>
				<placeholder>password</placeholder>
				<validators>
					<notempty>
						<validator>NotEmpty</validator>
						<options>
							<messages>
								<isEmpty>A name is required</isEmpty>
							</messages>
						</options>
					</notempty>
					<strlen>
						<validator>StringLength</validator>
						<options>
							<min>5</min>
							<max>20</max>
							<!--
							<messages>
								<stringLengthTooShort>A phone number is required</stringLengthTooShort>
								<stringLengthTooLong>is too much long</stringLengthTooLong>
							</messages>
							 -->
						</options>
					</strlen>
				</validators>
				<required>true</required>
				<filters>
					<StringTrim>
						<filter>StringTrim</filter>
					</StringTrim>
				</filters>
				<value />
				<!--
				<readonly>readonly</readonly>
				<description>The user's first, last or both names</description>
				<allowEmpty>true</allowEmpty>
				<autoInsertNotEmptyValidator>false</autoInsertNotEmptyValidator>
				 -->
			</options>
		</password>
		<yourchoise>
			<type>radio</type>
			<options>
				<order>4</order>
				<label>Your Choises</label>
				<multiOptions>
					<option1>
						<key>1</key>
						<value>Test</value>
					</option1>
					<option2>
						<key>2</key>
						<value>Test 2</value>
					</option2>
				</multiOptions>
			</options>
		</yourchoise>
		<cities>
			<type>select</type>
			<options>
				<order>5</order>
				<label>Cities</label>
				<multiOptions>
					<option1>
						<key>1</key>
						<value>Test</value>
					</option1>
					<option2>
						<key>2</key>
						<value>Test 2</value>
					</option2>
				</multiOptions>
			</options>
		</cities>
		<countries>
			<type>select</type>
			<options>
				<order>6</order>
				<isArray>1</isArray>
				<label>Countries</label>
				<multiOptions>
					<option1>
						<key>1</key>
						<value>Test</value>
					</option1>
					<option2>
						<key>2</key>
						<value>Test 2</value>
					</option2>
				</multiOptions>
			</options>
		</countries>
		<newspaper>
			<type>multiCheckbox</type>
			<options>
				<order>7</order>
				<label>Newspaper</label>
				<label_class>inline</label_class>
				<multiOptions>
					<option1>
						<key>1</key>
						<value>Test</value>
					</option1>
					<option2>
						<key>2</key>
						<value>Test 2</value>
					</option2>
				</multiOptions>
				<!--
				<decorators>
					<viewhelper>
						<decorator>ViewHelper</decorator>
					</viewhelper>
					<errors>
						<decorator>Errors</decorator>
					</errors>
					<data>
						<decorator>
							<data>HtmlTag</data>
						</decorator>
						<options>
							<tag>div</tag>
							<class>element</class>
						</options>
					</data>
					<label>
						<decorator>Label</decorator>
						<options>
							<class>left</class>
						</options>
					</label>
					<row>
						<decorator>
							<row>HtmlTag</row>
						</decorator>
						<options>
							<tag>div</tag>
							<class>row</class>
						</options>
					</row>
				</decorators>
				-->
			</options>
		</newspaper>
		<!--
		<mycaptcha>
			<type>captcha</type>
			<options>
				<order>8</order>
				<label>Captcha</label>
				<captcha>
					<captcha>Image</captcha>
					<wordLen>8</wordLen>
					<timeout>900</timeout>
					<width>220</width>
					<height>60</height>
					<imgDir>captcha/</imgDir>
					<font>resources/font/OpenSans.ttf</font>
					<fontSize>25</fontSize>
					<imgUrl>/captcha/</imgUrl>
				</captcha>
			</options>
		</mycaptcha>
		-->
		<button>
			<type>button</type>
			<name>submit</name>
			<options>
				<class>input-large</class>
				<type>submit</type>
				<buttonType>primary</buttonType>
				<icon>ok</icon>
				<label>Login</label>
				<order>1000</order>
				<ignore>true</ignore>
			</options>
		</button>
	</elements>
</form>
